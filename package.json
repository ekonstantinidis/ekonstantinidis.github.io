{
  "name": "manosim-website",
  "description": "Repository containing the source for my website.",
  "version": "0.1.0",
  "scripts": {
    "watch-scss": "node-sass -w src/scss/base.scss -o static/css/",
    "watch-js": "webpack --mode development --progress --colors --watch",
    "watch": "npm run watch-scss & npm run watch-js",
    "build-scss": "node-sass --output-style compressed src/scss/base.scss -o static/css/",
    "build-js": "webpack --mode production --devtool source-map",
    "build": "npm run build-scss & npm run build-js",
    "start": "npm run watch & jekyll serve --livereload",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manosim/manos.im.git"
  },
  "keywords": [
    "blog",
    "jekyll",
    "iamemmanouil",
    "manosim",
    "ekonstantinidis"
  ],
  "author": "Emmanouil Konstantinidis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/manosim/manos.im./issues"
  },
  "homepage": "https://www.manos.im/",
  "dependencies": {
    "bootstrap": "=4.3.1",
    "font-awesome": "=4.7.0",
    "jquery": "=3.4.1",
    "node-sass": "=4.12.0",
    "popper.js": "=1.15.0",
    "webpack": "=4.39.1",
    "webpack-cli": "=3.3.6"
  },
  "devDependencies": {}
}
